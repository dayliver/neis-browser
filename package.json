{
  "name": "neis-browser",
  "version": "0.5.4",
  "description": "Web Browser only for NEIS",
  "main": "./out/main/index.js",
  "author": "https://hwaryong.com",
  "homepage": "https://neisbrowser.hwaryong.com",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "git:save": "git add . && git commit -m \"Update\" && git push",
    "release:win": "node scripts/release.js",
    "push": "node scripts/push.js",
    "update:config": "node scripts/update-config.js"
  },
  "build": {
    "appId": "com.neisbrowser.app",
    "productName": "나이스브라우저",
    "executableName": "neisbrowser",
    "artifactName": "neisbrowser-${version}-setup.${ext}",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "out/**/*",
      "package.json",
      "build/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "dayliver",
      "repo": "neis-browser-release",
      "private": false
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "나이스브라우저"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns",
      "category": "public.app-category.education"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png",
      "category": "Education"
    }
  },
  "dependencies": {
    "@electron-toolkit/utils": "^4.0.0",
    "crypto-js": "^4.2.0",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "pako": "^2.1.0",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config": "^2.1.0",
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "dotenv": "^17.2.3",
    "electron": "^38.1.2",
    "electron-builder": "^25.1.8",
    "electron-vite": "^4.0.1",
    "eslint": "^9.36.0",
    "eslint-plugin-vue": "^10.4.0",
    "knip": "^5.71.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vite": "^7.1.6",
    "vue": "^3.5.21",
    "vue-eslint-parser": "^10.2.0"
  }
}
